{
  "name": "publishr",
  "version": "0.0.13",
  "description": "A tool for harmonious publishing of git and npm packages.",
  "bin": {
    "publishr": "lib/cli.js"
  },
  "scripts": {
    "build": "rimraf lib && babel src/ -d lib/",
    "lint": "eslint src",
    "test": "npm run lint",
    "postpublish": "node lib/cli.js postpublish",
    "postversion": "node lib/cli.js postversion",
    "prepublish": "npm run build"
  },
  "keywords": [
    "git",
    "npm",
    "publish",
    "version"
  ],
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.9.1",
    "babel-core": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "object-assign": "^4.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "eslint": "^1.0.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-plugin-filenames": "^0.2.0",
    "rimraf": "^2.5.2"
  },
  "publishr": {
    "dependencies": [
      "^babel"
    ],
    "files": {
      ".npmignore": ".npmignore.publishr"
    }
  }
}
