{
  "name": "publishr",
  "version": "0.0.2",
  "description": "A tool for simultaneous publishing of git and npm packages.",
  "main": "lib/index.js",
  "scripts": {
    "build": "rimraf lib && babel src/ -d lib/",
    "lint": "eslint src",
    "test": "npm run lint",
    "postpublish": "./lib/index.js postpublish",
    "postversion": "./lib/index.js postversion"
  },
  "keywords": [
    "git",
    "npm",
    "publish",
    "version"
  ],
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.9.1",
    "babel-core": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "object-assign": "^4.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^6.0.4"
  },
  "publishr": {
    "dependencies": [
      "^babel"
    ],
    "files": {
      ".npmignore": ".npmignore.publishr"
    }
  }
}
